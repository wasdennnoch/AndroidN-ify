<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DarkTheme" parent="android:Theme.Material">
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="LightTheme" parent="android:Theme.Material.Light.DarkActionBar"/>

    <declare-styleable name="SeekBarPreference">
        <attr name="minimum" format="integer"/>
        <attr name="maximum" format="integer"/>
        <attr name="interval" format="integer"/>
        <attr name="monitorBoxEnabled" format="boolean"/>
        <attr name="monitorBoxUnit" format="string"/>
        <attr name="monitorBoxLeadingSpace" format="boolean"/>
    </declare-styleable>

</resources>
